# EditorConfig configuration file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true
charset = utf-8
max_line_length = 80

# No semicolons equivalent
# Prettier handles semicolons, EditorConfig does not have a direct equivalent

# Single quote preference (not supported in EditorConfig, handled via linter/prettier)
# Use custom tooling like ESLint for quote style

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

